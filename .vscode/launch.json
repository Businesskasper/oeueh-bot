{
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "preLaunchTask": "npm: build",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--r",
                "ts-node/register",
                "--reporter",
                "dot",
                "--slow",
                "5000",
                "--colors",
                "${workspaceFolder}/dist/tests/**/*.spec.js",
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}